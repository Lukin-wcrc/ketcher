{
  "compilerOptions": {
    /**
     * ketcher-core will NOT be bundled into dist
     * because we have limited `include` to `src` in tsconfig.json
     * we can regard paths here as development config for TS IntelliSense
     */
    "paths": {
      "ketcher-core": ["../ketcher-core/src"],
      "domain/*": ["../ketcher-core/src/domain/*"],
      "infrastructure/*": ["../ketcher-core/src/infrastructure/*"],
      "application/*": ["../ketcher-core/src/application/*"],
      "utilities": ["../ketcher-core/src/utilities"]
    }
  }
}
